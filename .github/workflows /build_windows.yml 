name: Build Flutter Desktop

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:  # لتشغيل يدوي

jobs:
  build-windows:
    runs-on: windows-latest
    env:
      APP_NAME: "Nwara Store"

    steps:
      - uses: actions/checkout@v3

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: "3.32.5"

      - name: Enable Windows desktop
        run: flutter config --enable-windows-desktop

      - name: Change Windows App Name
        run: |
          (Get-Content windows\runner\CMakeLists.txt) -replace 'set\(PROJECT_NAME ".*"\)', "set(PROJECT_NAME \"$env:APP_NAME\")" | Set-Content windows\runner\CMakeLists.txt

      - name: Get dependencies
        run: flutter pub
